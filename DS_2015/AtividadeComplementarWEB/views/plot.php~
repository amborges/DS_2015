	$dados = array(
		array('Janeiro', 10),
		array('Fevereiro', 5),
		array('Março', 4),
		array('Abril', 8),
		array('Maio', 7),
		array('Junho', 5),
	);

	$plot->SetDataValues($dados);
	$plot->SetPlotType("bars");
	
	#Exibimos o gráfico
	$plot->SetIsInline(TRUE);
	$plot->SetOutputFile("/var/www/html/AtividadeComplementarWEB/classes/phplot-6.1.0/tmpIMGs/img.png");
	$plot->DrawGraph();
	
