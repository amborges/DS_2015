	$plot = new PHPlot();
	$plot->SetTitle("Relação das Horas Acumuladas");
	
	#Indicamos o título do gráfico e o título dos dados no eixo X e Y do mesmo
	$plot->SetXTitle("Grandes Áreas");
	$plot->SetYTitle("Horas");
	
	#Definimos os dados do gráfico
	/*$dados = array();
